<h1>Add a Tune!</h1>

<%= link_to "back", tunes_path %>

<%= form_for(@tune) do |f| %>
	<%= render 'shared/error_messages', :object => @tune %>
	
	<div class="field">
		<span class="required">*</span><%= f.label :url %><br/>
		<%= f.text_field :url %>
	</div>
	
	<div class="field">
		<span class="required">*</span><%= f.label :title %><br/>
		<%= f.text_field :title %>
	</div>
	
	<div class="field">
		<%= f.label :artist_name %><br/>
		<%= f.text_field :artist_name %>
	</div>
	
	<div class="field">
		<%= f.label :duration %> (seconds)<br/>
		<%= f.text_field :duration, :size => 5 %>
	</div>
	
	<div class="actions">
		<%= f.submit "Save" %>
	</div>
<% end %>
